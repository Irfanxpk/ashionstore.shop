<form action="/admin/addProduct" method="post" enctype="multipart/form-data">
    <div class="form-floating mb-3 ">
        <input name="name" type="text" class="form-control" id="floatingInput"
               placeholder="name@example.com" required>
        <label for="floatingInput">Product Name</label>
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">₹</span>
        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="price" placeholder="Price" required>
        <span class="input-group-text">.00</span>
    </div>

    <div class="form-floating mb-3 ">
        <input name="Stock" type="number" class="form-control" id="floatingInput"
               placeholder="name@example.com" required>
        <label for="floatingInput">Product Stock</label>
    </div>

   
<!-- Checkbox with the name "productOffer" -->
<input type="checkbox" id="showOptions" name="productOffer" class="mb-3">
<label for="showOptions">Give Offer</label>

<!-- Select dropdown initially hidden -->
<select class="form-select mb-3" aria-label="Default select example" name="productOffer" required id="optionsSelect"
    style="display: none;">
    <!-- Options will be generated dynamically using JavaScript -->
</select>

<div  id="dateTimePickers" style="display: none;" class="mb-3">
    <div id="datetimepicker1" class="input-append date">
        <label for="validFrom">Valid From:</label>
        <input id="validFrom" data-format="dd/MM/yyyy hh:mm:ss" type="date"></input>
        <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span> &nbsp;&nbsp;

        <label for="validUntil">Valid Until:</label>
        <input id="validUntil" data-format="dd/MM/yyyy hh:mm:ss" type="date"></input>
        <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
    </div>
</div>



    <select class="form-select mb-3" aria-label="Default select example" name="selectedCategory" required>
        <option selected>Select Category</option>
        <% category.forEach(category => { %>
        <option value="<%= category.id %>"><%= category.name %></option>
        <% }); %>
    </select>
    <div class="form-floating">
        <textarea class="form-control" name="description" placeholder="Leave a comment here"
                  id="floatingTextarea" style="height: 150px" required></textarea>
        <label for="floatingTextarea">Description</label>
    </div>

    <div class="mb-3 pt-4">
        <label for="formFileMultiple" class="form-label">Upload Product Images</label>
        <input class="form-control bg-dark" type="file" id="imageInput" name="images" accept="image/*" multiple required>
    </div>

    <div class="image-preview">
        <div id="previewContainer"></div>
    </div>

    <div class="m-n2">
        <button class="btn btn-primary w-50 m-2" type="submit">Add Product</button>
    </div>
</form>

