        <script>
            function validateForm() {
                var name = document.getElementById("categoryName").value;
                var description = document.getElementById("categoryDescription").value;
                var nameError = document.getElementById("nameError");
                var descriptionError = document.getElementById("descriptionError");
                var errorMessage = document.getElementById("errorMessage");

                // Reset previous error messages
                nameError.style.display = "none";
                descriptionError.style.display = "none";
                errorMessage.innerHTML = "";

                // Validate Name
                if (name.trim() === "") {
                    nameError.innerHTML = "Please enter a category name";
                    nameError.style.display = "block";
                    return; // Stop form submission
                }

                // Validate Description
                if (description.trim() === "") {
                    descriptionError.innerHTML = "Please enter a description";
                    descriptionError.style.display = "block";
                    return; // Stop form submission
                }

                // If all validations pass, submit the form
                document.getElementById("addCategoryForm").submit();
            }
        </script>


