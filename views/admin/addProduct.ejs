<script>
    function validateProductForm() {
        var name = document.querySelector('input[name="name"]').value;
        var price = document.querySelector('input[name="price"]').value;
        var stock = document.querySelector('input[name="Stock"]').value;
        var category = document.querySelector('select[name="selectedCategory"]').value;
        var description = document.querySelector('textarea[name="description"]').value;
        var images = document.querySelector('input[name="images"]').files;

        if (name.trim() === "") {
            Swal.fire("Error", "Please enter a product name.", "error");
            return false;
        }

        if (price.trim() === "" || parseFloat(price) <= 0 || isNaN(parseFloat(price))) {
            Swal.fire("Error", "Please enter a valid positive price.", "error");
            return false;
        }

        if (stock.trim() === "" || parseInt(stock) <= 0 || isNaN(parseInt(stock))) {
            Swal.fire("Error", "Please enter a valid positive stock quantity.", "error");
            return false;
        }

        if (category === "Select Category") {
            Swal.fire("Error", "Please select a category.", "error");
            return false;
        }

        if (description.trim() === "") {
            Swal.fire("Error", "Please enter a description.", "error");
            return false;
        }

        if (images.length === 0) {
            Swal.fire("Error", "Please upload at least one image.", "error");
            return false;
        }

        return true;
    }
</script>

            
           
